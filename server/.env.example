# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/ciphersql
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ciphersql

# PostgreSQL Connection (Sandbox Database)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=ciphersql_sandbox
PG_USER=postgres
PG_PASSWORD=your_postgres_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# LLM Provider Configuration
# Options: openai, gemini
LLM_PROVIDER=openai

# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini API Key (if using Gemini)
GEMINI_API_KEY=your-gemini-api-key

# Query Execution Limits
QUERY_TIMEOUT_MS=5000
MAX_ROWS_RETURNED=1000
